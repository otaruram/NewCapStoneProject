# Production Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://vibelytube:your_secure_password@localhost:5432/vibelytube
DATABASE_USER=vibelytube
DATABASE_PASSWORD=your_secure_password
DATABASE_NAME=vibelytube
DATABASE_PORT=5432

# Application Configuration
NODE_ENV=production
PORT=4000
FRONTEND_PORT=3002
APP_PORT=4000

# Vercel Production Configuration
CORS_ORIGIN=https://intinyaajadongs-hokf.vercel.app
FRONTEND_URL=https://intinyaajadongs-hokf.vercel.app
PRISMA_GENERATE_DATAPROXY=true

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
SESSION_SECRET=your_random_session_secret_here

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_BASE_URL=https://ai.sumopod.com
OPENAI_MODEL=gpt-4.1

# YouTube API Configuration
YOUTUBE_API_KEY=your-youtube-api-key-here

# AssemblyAI untuk transcription
ASSEMBLYAI_API_KEY=your-assemblyai-api-key-here

# Authentication - Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:4000/api/auth/google/callback
SESSION_SECRET=your-super-secure-session-secret-key

# Frontend URL for redirects
FRONTEND_URL=http://localhost:5173

# Authentication - GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters
JWT_EXPIRES_IN=7d

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,https://yourdomain.com,https://www.yourdomain.com

# File Upload Configuration
MAX_FILE_SIZE=100MB
UPLOAD_PATH=./uploads

# Monitoring
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_secure_grafana_password

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Session Configuration
SESSION_SECRET=your-super-secure-session-secret
SESSION_MAX_AGE=86400000

# SSL Configuration (for production)
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Performance Configuration
CLUSTER_WORKERS=auto
MEMORY_LIMIT=512MB

# Security Configuration
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
ENABLE_2FA=false

# Development Configuration (only for development)
DEV_DATABASE_URL=postgresql://vibelytube:password123@localhost:5432/vibelytube_dev
DEV_REDIS_URL=redis://localhost:6379