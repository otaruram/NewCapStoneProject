# Production Environment Variables untuk Vercel Deployment
# Copy variabel ini ke Vercel Dashboard → Settings → Environment Variables

# Google OAuth Configuration (REQUIRED)
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret
GOOGLE_CALLBACK_URL=https://intinyaajadongs-hokf.vercel.app/api/auth/google/callback

# API Keys (REQUIRED)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_BASE_URL=https://ai.sumopod.com
YOUTUBE_API_KEY=your-youtube-api-key
ASSEMBLYAI_API_KEY=your-assemblyai-api-key

# Database (REQUIRED - use Vercel Postgres atau Neon)
DATABASE_URL=postgresql://username:password@host:5432/database

# Frontend Configuration (REQUIRED)
FRONTEND_URL=https://intinyaajadongs-hokf.vercel.app
CORS_ORIGIN=https://intinyaajadongs-hokf.vercel.app

# Session Security (REQUIRED)
SESSION_SECRET=your-random-32-character-secret-key

# Application Settings
NODE_ENV=production
PORT=3000